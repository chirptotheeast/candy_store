<h2> Create a Candy! 🍬 </h2>


<%= form_for @candy do |f|%>
    
    <div>
    candy name: <%= f.text_field :name, required: true %>
    </div>
    <div>
    calories: <%= f.number_field :calories, required: true%>
    </div>
    <div>
    wrapper color:<%= f.text_field :wrapper_color, required: true%>
    </div>
    <div>
    has nuts?<%= f.check_box :has_nuts %>
    </div>
    <%=f.submit%>

    <%end%>